<h1><%= @user.username %></h1>

<p>
  <strong>Email:</strong>
  <%=h @user.email %>
</p>

<p>
  <strong>API Key:</strong>
  <%=h @user.single_access_token %>
</p>

<h2>Recent Ideas</h2>
<ul>
<%= "<li>There are no recent ideas to display.</li>" if @user.ideas.empty? %>
<% @user.ideas.each do |idea| -%>
  <li><%= link_to idea.title, idea %></li>
<% end -%>
</ul>

<% if is_current_user? @user -%>
<p>
  <%= link_to "Edit Profile", edit_user_path(@user) %>
</p>
<% end -%>