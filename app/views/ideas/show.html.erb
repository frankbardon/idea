<h2><%= h(@idea.title) %></h2>

<p><%=h @idea.description %></p>

<p>
  posted by: <%= link_to @idea.user.username.titlecase, @idea.user %>
  <% if is_current_user? @idea.user -%>
  <small>--
  <%= link_to "Edit Details", edit_idea_path(@idea) %> |
  <%= link_to "Delete this Idea", @idea, :confirm => 'Are you sure?', :method => :delete %>
  </small>
  <% end -%>
</p>

<h2>Pieces</h2>
<ul>
<% if @idea.pieces.empty? -%>
  <li>There are no pieces to display.</li>
<% else -%>
<% @idea.pieces.each do |piece| -%>
  <li><%= link_to piece.title, idea_piece_path(@idea,piece) %> <small>by <%= link_to piece.user.username, piece.user %></small></li>
<% end -%>
<% end -%>
</ul>

<p>
  <%= link_to "New Piece", new_idea_piece_path(@idea) %>
</p>